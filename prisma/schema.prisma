generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id          String    @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  completed   Boolean   @default(false)
  archived    Boolean   @default(false)
  positionX   Float     @default(200)
  positionY   Float     @default(200)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  connectionsFrom Connection[] @relation("FromGoal")
  connectionsTo   Connection[] @relation("ToGoal")
}

model Connection {
  id         String   @id @default(cuid())
  fromGoalId String
  toGoalId   String
  fromGoal   Goal     @relation("FromGoal", fields: [fromGoalId], references: [id], onDelete: Cascade)
  toGoal     Goal     @relation("ToGoal", fields: [toGoalId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([fromGoalId, toGoalId])
}
